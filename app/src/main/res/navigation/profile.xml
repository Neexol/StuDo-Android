<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile"
    app:startDestination="@id/profileFragment">

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.rtuitlab.studo.ui.general.users.fragments.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_accountSettingsFragment"
            app:destination="@id/accountSettingsFragment"/>
        <action
            android:id="@+id/action_profileFragment_to_adsListFragment2"
            app:destination="@id/adsListFragment2" />
        <action
            android:id="@+id/action_profileFragment_to_resumesListFragment2"
            app:destination="@id/resumesListFragment2" />
        <action
            android:id="@+id/action_profileFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/accountSettingsFragment"
        android:name="com.rtuitlab.studo.ui.general.users.fragments.AccountSettingsFragment"
        android:label="fragment_account_settings"
        tools:layout="@layout/fragment_account_settings" >
        <action
            android:id="@+id/action_accountSettingsFragment_to_changeEmailDialog"
            app:destination="@id/changeEmailDialog" />
        <action
            android:id="@+id/action_accountSettingsFragment_to_changePasswordDialog"
            app:destination="@id/changePasswordDialog" />
    </fragment>
    <dialog
        android:id="@+id/changeEmailDialog"
        android:name="com.rtuitlab.studo.ui.general.users.dialogs.ChangeEmailDialog"
        android:label="ChangeEmailDialog"
        tools:layout="@layout/dialog_change_email"/>
    <dialog
        android:id="@+id/changePasswordDialog"
        android:name="com.rtuitlab.studo.ui.general.users.dialogs.ChangePasswordDialog"
        android:label="ChangePasswordDialog"
        tools:layout="@layout/dialog_change_password"/>
    <fragment
        android:id="@+id/adsListFragment2"
        android:name="com.rtuitlab.studo.ui.general.ads.AdsListFragment"
        android:label="AdsListFragment"
        tools:layout="@layout/fragment_recycler_list"/>
    <fragment
        android:id="@+id/resumesListFragment2"
        android:name="com.rtuitlab.studo.ui.general.resumes.ResumesListFragment"
        android:label="ResumesListFragment"
        tools:layout="@layout/fragment_recycler_list"/>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.rtuitlab.studo.ui.general.users.fragments.SettingsFragment"
        android:label="SettingsFragment"/>
</navigation>